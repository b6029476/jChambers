<!DOCTYPE html>
<html>
  <head>
    <title>EventApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do|name, msg| %>
      <%= content_tag(:div, msg, class: "alert alert-info") %>
      <% end %>
    <div class="container">

   <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">

      <h5 class="my-0 mr-md-auto font-weight-normal"> Sheffield Events </h5>

      <nav class="my-2 my-md-0 mr-md-3">


        <a class="p-2 text-dark" href="#"> <%= link_to "Home", '/static_pages/home' %> </a>
<a class="p-2 text-dark" href="#"> <%= link_to "About Us", '/static_pages/about' %>  </a>
        <a class="p-2 text-dark" href="#"> <%= link_to "Contact Us", new_contact_path %>  </a>
  <a class="p-2 text-dark" href="#"> <%= link_to "Events", events_path %> </a>
  
 

   <% if current_user %>
           <a class="p-2 text-dark" href="#">
            <%= link_to 'Log Out', session_path('active'), method: :delete %>
          </a>

             <a class="p-2 text-dark" href="#">
            <%= link_to 'My Profile', profile_path(current_user.id) %>
          </a>
             <a class="p-2 text-dark" href="#">
            <%= link_to 'Edit Profile', edit_profile_path(current_user.id) %>
          </a>

  
          <% else %>
          <a class="p-2 text-dark" href="#">
            <%= link_to 'log in', new_session_path, class:"active_nav_link" %>
          </a>
           <a class="p-2 text-dark" href="#"><%= link_to "create account", new_user_path %></a>

          <% end %>


       
      </nav>

      

    </div>
</div>

    <%= yield %>
  </body>
</html>
