<!DOCTYPE html>
<html>
  <head>
    <title>ReviewApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


<div class="container">

   <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">

      <h5 class="my-0 mr-md-auto font-weight-normal"> Review App </h5>

      <nav class="my-2 my-md-0 mr-md-3">


        <a class="p-2 text-dark" href="#"> <%= link_to "Home", '#'%>
        </a>
<a class="p-2 text-dark" href="#"><%= link_to "About Us", '#'%></a>
        <a class="p-2 text-dark" href="#"><%= link_to "Contact Us", '#'%></a>
        <a class="p-2 text-dark" href="#"><%= link_to "Products", products_path %></a>
           <a class="p-2 text-dark" href="#"><%= link_to "Add a Product", new_product_path %></a>
           <a class="p-2 text-dark" href="#"><%= link_to "create account", new_user_path %></a>

           <% if current_user %>
           <a class="p-2 text-dark" href="#">
            <%= link_to 'Log Out', session_path('active'), method: :delete %>
          </a>
          <a class="p-2 text-dark" href="#">
            <%= current_user.userid %>
          </a>
          <% else %>
          <a class="p-2 text-dark" href="#">
            <%= link_to 'log in', new_session_path, class:"active_nav_link" %>
          </a>
          <% end %>


      </nav>
    </div>
</div>
<div class="container">
    <%= yield %>
  </div>
  </body>
</html>
